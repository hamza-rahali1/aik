{% extends '/admin/property/index.html.twig' %}
{% block title %}Actualiza tu Contraseña{% endblock %}

{% block body %}

        <div class="page-head"> 
            <div class="container">
                <div class="row">
                    <div class="page-head-content">
                        <h1 class="page-title">Hola : <span class="orange strong"> {{ app.user.firstName }} {{ app.user.lastName }} </span></h1>               
                    </div>
                </div>
            </div>
        </div>
        <!-- End page header --> 

        <!-- property area -->
        
        <div class="content-area user-profiel" style="background-color: #FCFCFC;">&nbsp;
            <div class="container"> 
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}  
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1 profiel-container">

                        {{ form_start(form)}}

                            <div class="profiel-header">
                                <h3>
                                    <b>Actualiza</b> tu contraseña <br>
                                    <small></small>
                                </h3>
                                <hr>
                            </div>

                            <div class="clear">

                                <div class="col-sm-10 col-sm-offset-1">
                                    <div class="form-group">
                                        <label>Contraseña anterior <small>(required)</small></label>
                                        {{form_row(form.oldPassword)}}
                                    </div>
                                    <div class="form-group">
                                        <label>Nueva contraseña <small>(required)</small></label>
                                        {{form_row(form.newPassword)}}
                                    </div>
                                    <div class="form-group">
                                        <label>Confirmar contraseña <small>(required)</small></label>
                                        {{form_row(form.confirmPassword)}}
                                    </div> 
                                </div>
                                <div class="col-sm-10 col-sm-offset-1">
                                    <button type='submit' class='btn btn-finish btn-primary pull-right'>Actualizar</button>
                                </div>
                                
                            </div>
 
                    
                            
                            
                    {{ form_end(form)}}

                </div>
            </div><!-- end row -->

        </div>
    </div>

{% endblock %} 